{
  "manifest_version": 2,

  "name": "Trellob premium background",
  "description": "This extension shows a premium and custom background for free users",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Trellob",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "*://trello.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://trello.com/*"],
      "css": ["style.css"],
      "js": ["main.js"],
      "run_at":"document_start"
    }
  ],
  "web_accessible_resources": ["common.js", "script.js"]
}